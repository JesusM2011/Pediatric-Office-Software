<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #262626;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cse360p1.DoctorPortal">
   <children>
      <Label fx:id="welcomeMessage" layoutX="14.0" layoutY="14.0" text="Welcome, Doctor" textFill="WHITE">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <VBox layoutX="14.0" layoutY="62.0" prefHeight="236.0" prefWidth="574.0" spacing="10.0">
         <children>
            <Label fx:id="currentPatient_label" text="Current patient: " textFill="WHITE" />
            <Button fx:id="viewMessages_button" mnemonicParsing="false" onAction="#gotoMessages" style="-fx-background-color: #075de8;" text="View Messages" textFill="WHITE" />
            <Button fx:id="newMessage_button" mnemonicParsing="false" onAction="#gotoNewMessage" style="-fx-background-color: #075de8;" text="Write New Message" textFill="WHITE" />
            <Button fx:id="recommendations_button" mnemonicParsing="false" onAction="#gotoRecommendations" style="-fx-background-color: #075de8;" text="Input Recommendations" textFill="WHITE" />
            <Button fx:id="prescription_button" mnemonicParsing="false" onAction="#gotoPrescription" style="-fx-background-color: #075de8;" text="Enter Prescription" textFill="WHITE" />
         </children>
         <padding>
            <Insets left="5.0" top="10.0" />
         </padding>
      </VBox>
      <Button fx:id="logout" layoutX="264.0" layoutY="333.0" mnemonicParsing="false" onAction="#logOut" style="-fx-background-color: #075de8;" text="Log Out" textFill="WHITE" />
   </children>
</AnchorPane>
